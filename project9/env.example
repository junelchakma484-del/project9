# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/face_mask_detection
REDIS_URL=redis://localhost:6379/0

# Camera Configuration
CAMERA_CONFIG_PATH=config/cameras.json
FRAME_RATE=30
PROCESSING_INTERVAL=0.1

# AI Model Configuration
MODEL_PATH=models/face_mask_detector.h5
CONFIDENCE_THRESHOLD=0.8
FACE_DETECTION_MODEL=models/haarcascade_frontalface_default.xml

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
TELEGRAM_ENABLED=true

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_TOPIC_PREFIX=face_mask_detection

# Grafana Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your_grafana_api_key

# Web Application
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=true
PORT=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance Settings
MAX_WORKERS=4
QUEUE_SIZE=100
BUFFER_SIZE=10

# Alert Configuration
ALERT_COOLDOWN=300
VIOLATION_THRESHOLD=3
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
